<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/root_layout"
    android:background="@drawable/poll_bg_drawable"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="75"
            android:progressDrawable="@drawable/bg_progress_drawable" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/progress_bar"
            android:layout_alignTop="@id/progress_bar"
            android:layout_alignEnd="@id/progress_bar"
            android:layout_alignBottom="@id/progress_bar"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent"
            android:gravity="end"
            android:text="75 %"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:src="@drawable/images"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:gravity="end"
            android:maxLines="1"
            android:id="@+id/name_text"
            android:ellipsize="end"
            android:text="Tom Brady"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>